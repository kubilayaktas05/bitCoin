<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:elevation="4dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent" 
                android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/name"
                      android:text="Name"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="15dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/symbol"
                      android:text="symbol"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      app:layout_constraintRight_toRightOf="@+id/name"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginStart="15dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/id"
                      android:text = "id"
                      app:layout_constraintBottom_toBottomOf="@+id/name"
                      app:layout_constraintRight_toLeftOf="parent"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/rank"
                      android:text="rank"
                      app:layout_constraintRight_toRightOf="@+id/id"
                      app:layout_constraintBottom_toBottomOf="@id/name"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/priceUsd"
                      android:text="price usd"
                      app:layout_constraintBottom_toBottomOf="@+id/id"
                      app:layout_constraintRight_toLeftOf="parent"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/priceBtc"
                      android:text="price btc"
                      app:layout_constraintRight_toRightOf ="@id/priceUsd"
                      app:layout_constraintBottom_toBottomOf="@+id/id"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/h_volume_usd"
                      android:text="24h volume usd"
                      app:layout_constraintBottom_toBottomOf="@+id/priceUsd"
                      app:layout_constraintRight_toLeftOf="parent"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/marketCapUsd"
                      android:text="marketCapUsd"
                      app:layout_constraintRight_toRightOf ="@id/h_volume_usd"
                      app:layout_constraintBottom_toBottomOf="@+id/priceUsd"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/available_supply"
                      android:text="available_supply"
                      app:layout_constraintBottom_toBottomOf="@+id/h_volume_usd"
                      app:layout_constraintRight_toLeftOf="parent"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/total_supply"
                      android:text="total_supply"
                      app:layout_constraintRight_toRightOf ="@id/available_supply"
                      app:layout_constraintBottom_toBottomOf="@+id/h_volume_usd"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/max_supply"
                      android:text="max_supply"
                      app:layout_constraintRight_toRightOf ="@id/total_supply"
                      app:layout_constraintBottom_toBottomOf="@+id/h_volume_usd"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/percent_change_1h"
                      android:text="percent_change_1h"
                      app:layout_constraintBottom_toBottomOf="@+id/available_supply"
                      app:layout_constraintRight_toLeftOf="parent"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/percent_change_24h"
                      android:text="percent_change_24h"
                      app:layout_constraintRight_toRightOf ="@id/percent_change_1h"
                      app:layout_constraintBottom_toBottomOf="@+id/available_supply"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/percent_change_7d"
                      android:text="percent_change_7d"
                      app:layout_constraintRight_toRightOf ="@id/percent_change_24h"
                      app:layout_constraintBottom_toBottomOf="@+id/available_supply"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/lastUpdated"
                      android:text="lastUpdated"
                      app:layout_constraintRight_toRightOf ="@id/percent_change_7d"
                      app:layout_constraintBottom_toBottomOf="@+id/available_supply"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
            />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>